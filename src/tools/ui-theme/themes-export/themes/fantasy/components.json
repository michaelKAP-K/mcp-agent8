      "border": "2px solid hsl(var(--accent1) / 0.8)"
    }
  },
  "button-accent2": {
    "styles": {
      "background": "linear-gradient(to bottom, hsl(var(--accent2)), hsl(var(--accent2) / 0.9))",
      "border": "2px solid hsl(var(--accent2) / 0.8)"
    }
  },
  "button-accent3": {
    "styles": {
      "background": "linear-gradient(to bottom, hsl(var(--accent3)), hsl(var(--accent3) / 0.9))",
      "border": "2px solid hsl(var(--accent3) / 0.8)"
    }
