# MCP Server Settings
# Transport method: 'stdio' or 'sse'
MCP_TRANSPORT=stdio

# Port number for SSE transport
PORT=3000

# Logging level: 'debug', 'info', 'warn', 'error'
LOG_LEVEL=info

# Log destination: 'stdout', 'stderr', 'file', 'none'
LOG_DESTINATION=stdout

# Log file path (when LOG_DESTINATION is 'file')
# LOG_FILE=/path/to/log/file.log

# Enable debug mode (true/false)
DEBUG=false

# Authentication Settings
AUTH_API_ENDPOINT=https://your-auth-api-endpoint.com
REQUIRE_AUTH=false

# Add your additional application settings here
# Supabase settings
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI settings
OPENAI_API_KEY=sk-your-api-key

# fal.ai settings
FAL_KEY=your_fal_api_key

# Credit API settings
V8_CREDIT_CLIENT_ID=your_credit_client_id
V8_CREDIT_CLIENT_SECRET=your_credit_client_secret
V8_CREDIT_API_ENDPOINT=your_credit_api_endpoint

# Tool Activation Settings
ENABLE_ALL_TOOLS=true

# Tool Group Activation Settings
ENABLE_VECTOR_SEARCH_TOOLS=true
ENABLE_ASSET_GENERATE_TOOLS=true

# Individual Tool Activation Settings
ENABLE_CODE_EXAMPLE_SEARCH_TOOL=true
ENABLE_GAME_RESOURCE_SEARCH_TOOL=true
