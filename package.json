{
  "name": "@agent8/mcp-server",
  "version": "1.0.0",
  "description": "Agent8 MCP Server",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "agent8-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "start": "tsx src/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint . --ext .ts --ignore-pattern 'test/**'",
    "lint:fix": "eslint . --ext .ts --fix --ignore-pattern 'test/**'",
    "prepare": "husky"
  },
  "keywords": [
    "agent8",
    "mcp",
    "server"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/openai": "^1.1.2",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@supabase/supabase-js": "^2.49.1",
    "ai": "^4.1.61",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix --ignore-pattern 'test/**'"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
