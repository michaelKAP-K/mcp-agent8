[commit]
    template = .gitmessage

[core]
    autocrlf = input
    safecrlf = warn
    editor = vim

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[pull]
    rebase = true

[push]
    default = current

[init]
    defaultBranch = main 